<Page x:Class="WpfApp13.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация"
      Background="Pink">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Имя" Foreground="Purple" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,5,0" Grid.Row="0" Grid.Column="0"/>
        <TextBox x:Name="firstNameText" Padding="2" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="0" Grid.Column="1"/>

        <TextBlock Text="Фамилия" Foreground="Purple" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,5,0" Grid.Row="1" Grid.Column="0"/>
        <TextBox x:Name="lastNameText" Padding="2" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="1" Grid.Column="1"/>

        <TextBlock Text="Логин" Foreground="Purple" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,5,0" Grid.Row="2" Grid.Column="0"/>
        <TextBox x:Name="loginText" Padding="2" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="2" Grid.Column="1"/>

        <TextBlock Text="Пароль" Foreground="Purple" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,5,0" Grid.Row="3" Grid.Column="0"/>
        <TextBox x:Name="passwordText" Padding="2" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="3" Grid.Column="1"/>

        <TextBlock Text="Телефон" Foreground="Purple" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,5,0" Grid.Row="4" Grid.Column="0"/>
        <TextBox x:Name="phoneText" Padding="2" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="4" Grid.Column="1"/>

        <TextBlock Text="Email" Foreground="Purple" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,5,0" Grid.Row="5" Grid.Column="0"/>
        <TextBox x:Name="emailText" Padding="2" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="5" Grid.Column="1"/>

        <Button Content="Зарегистрироваться" Padding="5" Background="Purple" Foreground="White" Click="SignUpButton_Click" Margin="55,2,0,2" Grid.Row="6" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
